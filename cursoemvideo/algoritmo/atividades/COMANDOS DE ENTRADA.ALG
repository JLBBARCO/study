Algoritmo "Comando de Entrada"
Var
   N1, N2, S: Inteiro
   M: Real
Inicio
      Escreva("Informe um numero: ")
      Leia(N1)
      Escreva("Informe outro numero: ")
      Leia(N2)
      S <- N1 + N2
      Escreval("A soma entre ", N1, " e ", N2, " e igual a ", S)
      M <- (N1 + N2) / 2
      Escreval("A media entre ", N1, " e ", N2, " e igual a ", M)
Fimalgoritmo